{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
